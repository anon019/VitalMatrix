/* pages/ai/ai.wxss */
/* 智慧星穹 - Wisdom Constellation Design System */

/* ========== 页面容器与背景 ========== */
.ai-container {
  min-height: 100vh;
  background: linear-gradient(165deg, #0f172a 0%, #1e293b 40%, #0f172a 100%);
  position: relative;
  overflow: hidden;
}

/* 背景装饰层 */
.bg-layer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

/* 浮动光球 */
.bg-orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.4;
}

.orb-1 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  top: -100rpx;
  right: -80rpx;
  animation: floatOrb 8s ease-in-out infinite;
}

.orb-2 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);
  top: 40%;
  left: -60rpx;
  animation: floatOrb 10s ease-in-out infinite reverse;
}

.orb-3 {
  width: 250rpx;
  height: 250rpx;
  background: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%);
  bottom: 20%;
  right: -80rpx;
  animation: floatOrb 12s ease-in-out infinite;
  opacity: 0.25;
}

@keyframes floatOrb {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(30rpx, -40rpx) scale(1.1); }
}

/* 星座点 */
.constellation-dots {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.dot {
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  background: #ffffff;
  border-radius: 50%;
  animation: twinkle 3s ease-in-out infinite;
}

.dot-1 { top: 15%; left: 20%; animation-delay: 0s; }
.dot-2 { top: 25%; right: 30%; animation-delay: 0.5s; }
.dot-3 { top: 45%; left: 15%; animation-delay: 1s; }
.dot-4 { top: 60%; right: 20%; animation-delay: 1.5s; }
.dot-5 { top: 80%; left: 40%; animation-delay: 2s; }

@keyframes twinkle {
  0%, 100% { opacity: 0.3; transform: scale(1); }
  50% { opacity: 0.8; transform: scale(1.5); }
}

/* ========== 英雄区头部 ========== */
.hero-section {
  position: relative;
  z-index: 1;
  padding: 80rpx 40rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* AI核心脉冲 */
.ai-core {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
}

.pulse-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  border: 2rpx solid rgba(59, 130, 246, 0.5);
  animation: pulseExpand 2s ease-out infinite;
}

.ring-1 {
  width: 100rpx;
  height: 100rpx;
  animation-delay: 0s;
}

.ring-2 {
  width: 130rpx;
  height: 130rpx;
  animation-delay: 0.4s;
}

.ring-3 {
  width: 160rpx;
  height: 160rpx;
  animation-delay: 0.8s;
}

@keyframes pulseExpand {
  0% {
    transform: translate(-50%, -50%) scale(0.8);
    opacity: 0.8;
  }
  100% {
    transform: translate(-50%, -50%) scale(1.3);
    opacity: 0;
  }
}

.core-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 40rpx rgba(59, 130, 246, 0.5);
}

.core-icon {
  font-size: 40rpx;
}

/* 标题文字 */
.hero-text {
  text-align: center;
  margin-bottom: 24rpx;
}

.hero-title {
  display: block;
  font-size: 52rpx;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 4rpx;
  margin-bottom: 12rpx;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.hero-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  letter-spacing: 2rpx;
}

/* 模型徽章 */
.model-badge {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
}

.badge-glow {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(139, 92, 246, 0.2) 100%);
  border-radius: 24rpx;
  animation: badgeGlow 3s ease-in-out infinite;
}

@keyframes badgeGlow {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 1; }
}

.badge-text {
  position: relative;
  font-size: 24rpx;
  font-weight: 600;
  color: #60a5fa;
  margin-bottom: 4rpx;
}

.badge-time {
  position: relative;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* ========== 加载状态 ========== */
.loading-state {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
}

.loading-pulse {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.loading-dot {
  width: 16rpx;
  height: 16rpx;
  background: #3b82f6;
  border-radius: 50%;
  animation: loadingBounce 1.4s ease-in-out infinite;
}

.loading-dot:nth-child(1) { animation-delay: 0s; }
.loading-dot:nth-child(2) { animation-delay: 0.2s; }
.loading-dot:nth-child(3) { animation-delay: 0.4s; }

@keyframes loadingBounce {
  0%, 80%, 100% {
    transform: scale(1);
    opacity: 0.5;
  }
  40% {
    transform: scale(1.5);
    opacity: 1;
  }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  letter-spacing: 2rpx;
}

/* ========== 内容区域 ========== */
.content-area {
  position: relative;
  z-index: 1;
  padding: 0 24rpx;
}

/* ========== 玻璃拟态卡片基础 ========== */
.glass-card {
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 24rpx;
  overflow: hidden;
}

/* 卡片入场动画 */
.card-animate {
  animation: cardSlideUp 0.6s ease-out both;
  animation-delay: var(--delay, 0s);
}

@keyframes cardSlideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ========== 日期提示 ========== */
.date-notice {
  display: flex;
  align-items: center;
  padding: 20rpx 28rpx;
  background: rgba(251, 191, 36, 0.15);
  border-color: rgba(251, 191, 36, 0.3);
}

.notice-icon-wrap {
  margin-right: 16rpx;
}

.notice-icon {
  font-size: 32rpx;
}

.notice-text {
  font-size: 26rpx;
  color: #fbbf24;
}

/* ========== 一句话总结卡片 ========== */
.summary-hero {
  position: relative;
  padding: 32rpx;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(139, 92, 246, 0.2) 100%);
  border-color: rgba(139, 92, 246, 0.3);
}

.summary-glow {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(139, 92, 246, 0.15) 0%, transparent 60%);
  animation: summaryGlow 4s ease-in-out infinite;
}

@keyframes summaryGlow {
  0%, 100% { transform: translate(0, 0); }
  50% { transform: translate(10%, 10%); }
}

.summary-icon-wrap {
  position: relative;
  margin-bottom: 16rpx;
}

.summary-icon {
  font-size: 36rpx;
}

.summary-text {
  position: relative;
  font-size: 30rpx;
  color: #ffffff;
  line-height: 1.8;
  font-weight: 500;
}

/* ========== 内容卡片通用样式 ========== */
.insight-card {
  padding: 28rpx;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-icon-wrap {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.card-emoji {
  font-size: 36rpx;
}

.card-title-group {
  flex: 1;
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 4rpx;
}

.card-subtitle {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.4);
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.card-content {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
  padding: 24rpx;
}

/* ========== 回顾卡片主题 ========== */
.review-theme {
  border-color: rgba(34, 197, 94, 0.3);
}

.review-icon {
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.3) 0%, rgba(16, 185, 129, 0.3) 100%);
}

.insight-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  animation: itemFadeIn 0.4s ease-out both;
  animation-delay: calc(var(--item-delay, 0s) + 0.3s);
}

.insight-item:last-child {
  margin-bottom: 0;
}

@keyframes itemFadeIn {
  from {
    opacity: 0;
    transform: translateX(-16rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.insight-marker {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  margin-top: 16rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.review-marker {
  background: #22c55e;
  box-shadow: 0 0 12rpx rgba(34, 197, 94, 0.5);
}

.insight-text {
  flex: 1;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.8;
}

/* ========== 建议卡片主题 ========== */
.advice-theme {
  border-color: rgba(59, 130, 246, 0.3);
}

.advice-icon {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.3) 0%, rgba(6, 182, 212, 0.3) 100%);
}

.advice-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  animation: itemFadeIn 0.4s ease-out both;
  animation-delay: calc(var(--item-delay, 0s) + 0.3s);
}

.advice-item:last-child {
  margin-bottom: 0;
}

.advice-number {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: 700;
  color: #ffffff;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.advice-body {
  flex: 1;
}

.advice-label {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #60a5fa;
  margin-bottom: 6rpx;
}

.advice-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.8;
}

/* ========== 知识卡片主题 ========== */
.knowledge-theme {
  border-color: rgba(251, 191, 36, 0.3);
}

.knowledge-icon {
  background: linear-gradient(135deg, rgba(251, 191, 36, 0.3) 0%, rgba(245, 158, 11, 0.3) 100%);
}

.knowledge-section {
  margin-bottom: 28rpx;
}

.knowledge-section:last-child {
  margin-bottom: 0;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-dot {
  width: 12rpx;
  height: 12rpx;
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #fbbf24;
}

.knowledge-list {
  padding-left: 24rpx;
}

.knowledge-item {
  margin-bottom: 16rpx;
}

.knowledge-item:last-child {
  margin-bottom: 0;
}

.knowledge-label {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(251, 191, 36, 0.8);
  margin-bottom: 6rpx;
}

.knowledge-text {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.75);
  line-height: 1.8;
  padding-left: 16rpx;
  border-left: 2rpx solid rgba(251, 191, 36, 0.3);
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-animation {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
}

.empty-orbit {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 2rpx dashed rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  animation: orbitSpin 8s linear infinite;
}

.orbit-dot {
  position: absolute;
  top: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 12rpx;
  height: 12rpx;
  background: #3b82f6;
  border-radius: 50%;
  box-shadow: 0 0 16rpx rgba(59, 130, 246, 0.6);
}

@keyframes orbitSpin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.empty-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 64rpx;
  opacity: 0.7;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-bottom: 40rpx;
}

.refresh-btn {
  position: relative;
  padding: 24rpx 56rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  border-radius: 32rpx;
  overflow: hidden;
}

.btn-text {
  position: relative;
  z-index: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 2rpx;
}

.btn-shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
  animation: btnShine 2s ease-in-out infinite;
}

@keyframes btnShine {
  0% { left: -100%; }
  50%, 100% { left: 100%; }
}

.refresh-btn:active {
  transform: scale(0.96);
  opacity: 0.9;
}

/* ========== 底部留白 ========== */
.bottom-spacer {
  height: 120rpx;
}
