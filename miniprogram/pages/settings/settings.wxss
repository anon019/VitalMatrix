/* pages/settings/settings.wxss */

/* 页面头部 */
.page-header {
  padding: 40rpx 20rpx 20rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #2E7D32;
  margin-bottom: 8rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666666;
}

/* ========== 降脂目标卡片 ========== */
.goal-card {
  background: linear-gradient(135deg, #E8F5E9 0%, #FFFFFF 50%, #FFF8E1 100%);
}

.card-header {
  margin-bottom: 20rpx;
}

.goal-highlight {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(46, 125, 50, 0.1);
  margin-bottom: 24rpx;
}

.goal-main {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #2E7D32;
  margin-bottom: 16rpx;
}

.goal-method {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.training-plan-section {
  margin-bottom: 24rpx;
}

.section-subtitle {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.plan-box {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.plan-item {
  display: flex;
  align-items: flex-start;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.plan-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.plan-content {
  flex: 1;
}

.plan-label {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.plan-value {
  display: block;
  font-size: 56rpx;
  font-weight: 700;
  color: #2E7D32;
  margin-bottom: 8rpx;
}

.plan-unit {
  font-size: 32rpx;
  color: #999999;
  font-weight: 400;
}

.plan-desc {
  display: block;
  line-height: 1.5;
}

.goal-tips {
  display: flex;
  align-items: flex-start;
  padding: 16rpx;
  background-color: #E3F2FD;
  border-radius: 8rpx;
  gap: 12rpx;
}

.tip-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
  line-height: 1.6;
  color: #333333;
}

/* ========== 个人数据网格 ========== */
.personal-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.personal-item {
  background-color: #F5F5F5;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.personal-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.personal-label {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.personal-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 4rpx;
}

.personal-unit {
  font-size: 22rpx;
  color: #999999;
}

/* ========== 心率区间卡片 ========== */
.zone-boundaries-card {
  background: linear-gradient(135deg, #E3F2FD 0%, #FFFFFF 100%);
}

.zone-boundaries-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.zone-boundary-item {
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.zone-boundary-item.zone-highlight {
  border: 2rpx solid #2E7D32;
  box-shadow: 0 4rpx 12rpx rgba(46, 125, 50, 0.2);
}

.zone1-bg {
  background: linear-gradient(135deg, #E3F2FD 0%, #FFFFFF 100%);
}

.zone2-bg {
  background: linear-gradient(135deg, #E8F5E9 0%, #FFFFFF 100%);
}

.zone3-bg {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFFFFF 100%);
}

.zone4-bg {
  background: linear-gradient(135deg, #FFEBEE 0%, #FFFFFF 100%);
}

.zone5-bg {
  background: linear-gradient(135deg, #F3E5F5 0%, #FFFFFF 100%);
}

.zone-boundary-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.zone-boundary-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.zone-boundary-percent {
  color: #999999;
}

.zone-boundary-range {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #2E7D32;
  margin-bottom: 8rpx;
}

.zone-boundary-desc {
  display: block;
  color: #666666;
  line-height: 1.5;
}

.zone-calc-note {
  padding: 16rpx;
  background-color: #FFF8E1;
  border-radius: 8rpx;
}

/* 信息项 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  text-align: right;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 授权状态 */
.auth-status {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
}

.status-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.status-text {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.status-subtitle {
  font-size: 24rpx;
  color: #999999;
}

/* 设置提示 */
.setting-tip {
  padding: 20rpx;
  background-color: #FFF3E0;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.setting-tip text {
  color: #F57C00;
  line-height: 1.6;
}

/* 退出登录按钮 */
.logout-btn {
  margin: 40rpx 0;
  padding: 24rpx;
  background-color: #FFFFFF;
  border: 2rpx solid #C62828;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  color: #C62828;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.logout-btn:active {
  background-color: #FFEBEE;
}
