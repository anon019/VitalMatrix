  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 6rpx;
}

.metric-icon {
  font-size: 24rpx;
}

.hrv-icon { background: rgba(236, 64, 122, 0.12); }
.rhr-icon { background: rgba(239, 68, 68, 0.12); }
