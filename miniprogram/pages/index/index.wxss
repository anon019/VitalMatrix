/* ========== 通用样式 ========== */
.container {
  padding: 0;
  background: linear-gradient(180deg, #F0F4F8 0%, #E8ECF0 100%);
  min-height: 100vh;
}

/* ========== 核心健康状态区 - 统一浅色风格 ========== */
.health-hero {
  background: linear-gradient(180deg, #E8F0F8 0%, #F0F4F8 100%);
  padding: 48rpx 24rpx 28rpx;
  position: relative;
}

/* 问候栏 */
.hero-greeting {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 28rpx;
}

.greeting-emoji {
  font-size: 48rpx;
}

.greeting-info {
  display: flex;
  flex-direction: column;
}

.greeting-text {
  font-size: 40rpx;
  font-weight: 800;
  color: #1e293b;
  letter-spacing: 2rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.08);
}

.greeting-date {
  font-size: 24rpx;
  color: #475569;
  margin-top: 4rpx;
  font-weight: 500;
}

/* 双评分核心区 */
.dual-score-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  padding: 28rpx 20rpx;
  box-shadow:
    0 4rpx 24rpx rgba(0, 0, 0, 0.06),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.score-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.score-divider {
  width: 1rpx;
  height: 100rpx;
  background: linear-gradient(180deg, transparent 0%, #e2e8f0 50%, transparent 100%);
  margin: 0 16rpx;
}

/* 评分圆环 */
.score-ring-wrap {
  position: relative;
}

.score-ring {
  width: 120rpx;
  height: 120rpx;
  position: relative;
}

.ring-track {
  position: absolute;
  inset: 0;
  border-radius: 50%;
  border: 10rpx solid #E8ECF0;
}

.ring-progress {
  position: absolute;
  inset: 0;
  border-radius: 50%;
  border: 10rpx solid transparent;
  border-top-color: #10B981;
  border-right-color: #10B981;
  transform: rotate(-45deg);
  /* 使用 conic-gradient 模拟进度 */
  background: conic-gradient(
    #10B981 calc(var(--progress) * 3.6deg),
    transparent calc(var(--progress) * 3.6deg)
  );
  -webkit-mask: radial-gradient(transparent 42rpx, #000 43rpx, #000 50rpx, transparent 51rpx);
  mask: radial-gradient(transparent 42rpx, #000 43rpx, #000 50rpx, transparent 51rpx);
}

.ring-progress.level-high {
  background: conic-gradient(
    #10B981 calc(var(--progress) * 3.6deg),
    transparent calc(var(--progress) * 3.6deg)
  );
}

.ring-progress.level-medium {
  background: conic-gradient(
    #F59E0B calc(var(--progress) * 3.6deg),
    transparent calc(var(--progress) * 3.6deg)
  );
}

.ring-progress.level-low {
  background: conic-gradient(
    #EF4444 calc(var(--progress) * 3.6deg),
    transparent calc(var(--progress) * 3.6deg)
  );
}

/* sleep-progress 已废弃，睡眠使用level-high/medium/low配色 */

.ring-center {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ring-value {
  font-size: 36rpx;
  font-weight: 800;
  color: #1a202c;
}

/* 评分信息 */
.score-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.score-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #4a5568;
}

.score-status {
  font-size: 22rpx;
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.score-status.level-high {
  color: #047857;
  background: rgba(16, 185, 129, 0.12);
}

.score-status.level-medium {
  color: #B45309;
  background: rgba(245, 158, 11, 0.12);
}

.score-status.level-low {
  color: #DC2626;
  background: rgba(239, 68, 68, 0.12);
}

/* sleep-status 已废弃，睡眠使用level-high/medium/low配色 */

/* 核心四指标 */
.metrics-row {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
}

.metric-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
  background: rgba(255, 255, 255, 0.75);
  border-radius: 16rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.metric-icon-wrap {
