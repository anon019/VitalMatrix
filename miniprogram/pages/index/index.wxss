  transform: translate(-50%, -50%);
  z-index: 3;
}

.progress-marker-dot.orange {
  background: #E65100;
  box-shadow: 0 2rpx 8rpx rgba(230, 81, 0, 0.4);
}

.sleep-progress-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
  padding: 0 4rpx;
}

.progress-label {
  font-size: 18rpx;
  color: #999;
}

.progress-label.center {
  color: #bbb;
}

.progress-note {
  text-align: center;
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx dashed rgba(0, 0, 0, 0.06);
}

.progress-note text {
  font-size: 22rpx;
  color: #666;
}

.progress-note text.green {
  color: #2E7D32;
  font-weight: 500;
}

.progress-note text.orange {
  color: #E65100;
  font-weight: 500;
}

/* 心率范围卡片 - 统一组件 */
.hr-range-card {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  padding: 16rpx 8rpx;
}

.hr-range-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.hr-range-icon-wrap {
  width: 40rpx;
  height: 40rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hr-range-icon-wrap.green-bg {
  background: linear-gradient(135deg, rgba(46, 125, 50, 0.15) 0%, rgba(76, 175, 80, 0.1) 100%);
}

.hr-range-icon-wrap.gray-bg {
  background: rgba(0, 0, 0, 0.05);
}

.hr-range-icon-wrap.orange-bg {
  background: linear-gradient(135deg, rgba(230, 81, 0, 0.15) 0%, rgba(255, 152, 0, 0.1) 100%);
}

.hr-range-icon {
  font-size: 22rpx;
  font-weight: 700;
}

.green-bg .hr-range-icon {
  color: #2E7D32;
}

.gray-bg .hr-range-icon {
  color: #888;
}

.orange-bg .hr-range-icon {
  color: #E65100;
}

.hr-range-data {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.hr-range-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
  line-height: 1.2;
}

.hr-range-label {
  font-size: 18rpx;
  color: #999;
  margin-top: 2rpx;
}

.hr-range-divider {
  width: 1rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.08);
}

/* ========== 日间心率样式 ========== */
.daytime-hr-section {
  margin-bottom: 20rpx;
}

.daytime-hr-hero {
  position: relative;
  background: linear-gradient(135deg, rgba(255, 193, 7, 0.08) 0%, rgba(255, 152, 0, 0.04) 100%);
  border-radius: 20rpx;
  padding: 28rpx 20rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
}

/* 装饰性太阳图标背景 */
.daytime-hr-icon-bg {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.12;
}

.daytime-hr-icon {
  font-size: 80rpx;
  color: #FF9800;
}

.daytime-hr-main {
  text-align: center;
}

.daytime-hr-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.daytime-hr-value-row {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 6rpx;
  margin-bottom: 10rpx;
}

.daytime-hr-value {
  font-size: 56rpx;
  font-weight: 800;
  color: #E65100;
  line-height: 1;
  letter-spacing: -2rpx;
}

.daytime-hr-unit {
  font-size: 22rpx;
  color: #999;
  font-weight: 500;
}

.daytime-hr-time-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.daytime-hr-time-icon {
  font-size: 18rpx;
}

.daytime-hr-time {
  font-size: 22rpx;
  color: #888;
}

.daytime-hr-note {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  padding-top: 8rpx;
}

.daytime-hr-note .note-icon {
  font-size: 18rpx;
}

.daytime-hr-note text {
  font-size: 20rpx;
  color: #aaa;
}

/* ========== 训练时间范围展示样式 ========== */
.time-range-new {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 16rpx;
  background: linear-gradient(135deg, rgba(230, 0, 0, 0.04) 0%, rgba(230, 0, 0, 0.02) 100%);
  border-radius: 16rpx;
  margin-top: 16rpx;
}

.time-point {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.time-icon {
  font-size: 28rpx;
}

.time-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.time-label-small {
  font-size: 18rpx;
  color: #999;
  font-weight: 500;
}

.time-value-large {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  font-variant-numeric: tabular-nums;
}

.time-connector {
  display: flex;
  align-items: center;
  flex: 1;
  margin: 0 16rpx;
}

.time-line {
  flex: 1;
  height: 3rpx;
  background: linear-gradient(90deg,
    rgba(230, 0, 0, 0.15) 0%,
    rgba(230, 0, 0, 0.3) 50%,
    rgba(230, 0, 0, 0.15) 100%);
  border-radius: 2rpx;
}

.time-duration {
  font-size: 22rpx;
  font-weight: 600;
  color: #E60000;
  padding: 6rpx 16rpx;
  background: rgba(230, 0, 0, 0.08);
  border-radius: 20rpx;
  margin: 0 12rpx;
  white-space: nowrap;
}
